<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_margin="8dp"
    android:background="@drawable/rounded_card_background"
    android:backgroundTint="@color/card_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

        <!-- IMAGE -->
        <ImageView
            android:id="@+id/suggestedItemImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:layout_marginVertical="12dp"
            android:scaleType="centerCrop"
            android:layout_margin="4dp"
            android:contentDescription="Suggested Item Image"
            android:src="@drawable/no_img" />

        <!-- TEXT + BUTTONS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/suggestedItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:layout_marginTop="12dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/suggestedItemInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last bought: 2025-03-25\nCategory: Groceries"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp" />
            <TextView
                android:id="@+id/suggestedItemScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 0"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="8dp"
                android:gravity="start">

                <Button
                    android:id="@+id/btnApprove"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:text="@string/approve"
                    android:backgroundTint="@color/categoryBathroom"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnDeny"

                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:text="@string/deny"
                    android:backgroundTint="@color/buttonRed"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

